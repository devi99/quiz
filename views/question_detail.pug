extends layout

block content

  h1 Question: #{question.title}
  h1 Answer: #{question.correctanswer}
  h4 #{question.subtext}
  
  if question.typemedia === 'pic'
    img(src=question.urlmedia)

  if question.typemedia === 'vid'
    iframe(type='text/html' width='100%' height='500'
      src=question.urlmedia
      frameborder='0' gesture='media' allow='autoplay;encrypted-media' allowfullscreen)

  div(style='margin-left:20px;margin-top:20px')

  hr
  p
    a(href='/questions/' + question.id + '/delete') Delete question
  p
    a(href='/questions/' + question.id +'/update') Update question